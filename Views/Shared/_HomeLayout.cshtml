@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Category page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication9</title>
    <link rel="stylesheet" href="~/lib/jquery/jquery.js" />
    <link rel="stylesheet" href="~/js/site.js" />


    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>



    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication9.styles.css" asp-append-version="true" />
</head>

@*<body style="background-color: #FDFDFD;" height: 100vh>*@
<body class="bg-image" style="background-image: url(/img/garageback.jpg);" height: 100vh>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                         <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="~/img/rentallogo.jpg" /></a>

                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                </li>
                                <li class="nav-item">
                                </li>
                            </ul>
                            <partial name="_LoginPartial" />
                        </div>

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted;" style="background-color: white; height: 100px;">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <div style="height:15px;"></div>
                    &copy; 2023 - WebApplication9 - <a asp-area="" asp-page="/Privacy">Privacy</a>
                </div>
                <div class="col-6">
                    <a style="width: 80px; background-color: darkgray; color: white" asp-controller=City class="nav-link; btn btn-sm btn-success">
                        City Page
                    </a>
                </div>
            </div>

        </div>
    </footer>


