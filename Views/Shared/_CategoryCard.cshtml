
@foreach (var cat in Model)
{

    <div class="col-4 align-middle">

        
            @*<div class="d-flex align-items-center justify-content-center" style="width: 100%; height: 75%; background-color: @(cat.Color);">*@


        <a asp-controller=Tool asp-route-id="@(cat.Id)" asp-action=Index class="nav-link; text-decoration-none">
            <div style="width: 80%; height: 95%; background-color: #44AB4B;">
                @*#6779A7*@
                <div class="container">
                    <div class="row">
                        <div class="col-12 d-flex align-items-center justify-content-center">
                        
                            <br><br>
                            
                            <img class="NO-CACHE" id="cursorimage1" alt="Tools" src="~/img/@(cat.CatName.Substring(0, 1))2.jpg" />
                            
                        </div>
                        <div class="col-12" style="height: 25px;"></div>
                        <div class="col-12 d-flex align-items-center justify-content-center text-center">
                            <h4 style="color: lightgray">Rent</h4>
                        </div>
                        <div class="col-12 d-flex align-items-center justify-content-center text-center">
                            <h4 style="color: lightgray">@(cat.Title)</h4>
                        </div>
                        <div class="col-12 d-flex text-center">
                            <h6 style="color: white">@(cat.Description)</h6>
                        </div>
                        <div class="col-12" style="height: 0px;"></div>
                    </div>
                </div>
            </div>
        </a>
 
    </div>

}










