@model Entities.Models.ViewModels.AddRequestViewModel

<!-- Bootstrap DatePicker -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css" type="text/css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js" type="text/javascript"></script>
<!-- Bootstrap DatePicker -->

<script>
    $(document).ready(function () {
        $('.NO-CACHE').attr('src', function () { return $(this).attr('src') + "?a=" + Math.random() });
    });
</script>

<form asp-controller="AddRequest" method="post" enctype="multipart/form-data" asp-action="FormsTestPost">
    <input asp-for="RenterId" type="hidden" value="@(Model.RenterId)" />
<input asp-for="ListId" type="hidden" value="@(Model.ListId)" />

    <div style="height: 50px;"></div>
    <div class="container d-flex justify-content-center">
        @*<div class="row border border-4 border-info" style="width: 500px; height: 475px; background-color: #88B9DD; border-radius: 14px;">*@
        <div class="row border border-0 border-info" style="width: 500px; height: 475px; background-color: #416DC5; border-radius: 7px;">


                    <div class="col-12">
                        <div style="height: 25px;"></div>
                        <div style="color: White" class="d-flex justify-content-center"><h1>Request Rental</h1></div>
                    </div>

                                    <div class="col-12 d-flex justify-content-center">
                                        <label style="color: White; font-weight: 400; font-size: large">
                                            @Model.ToolDescription
                                        </label>
                                    </div>


                                    <div class="col-12 d-flex justify-content-center">
                                        <label style="color: White; font-weight: 600; font-size: large">
                                            @Model.Price / Day
                                        </label>
                                        <div style="height: 25px;"></div>
                                    </div>


                <div class="col-12 d-flex justify-content-end">
                        <div class="row">
                        <div class="col-6 d-flex justify-content-end">
                                <div class="box d-flex justify-content-center" style="background-color: white; height: 270px; width: 205px; border-radius: 7px;">
                                    
                                    <div>
                                        <div style="height: 10px;"></div>
                                        <img style="height:250px;width:185px" class="NO-CACHE" src="~/img/user_img/@(Model.ToolID).jpg" />
                                    </div>
                                    
                                </div>
                        </div>
                            <div class="col-6">
                                <div class="row">
                                    <div class="col-12" style="color: White">
                                        <label>Request a Date</label>
                                        <input asp-for="DateIn" width="50px" class="form-control" type="date" data-val="true" data-val-required="The Date field is required" />
                                        <span asp-validation-for="@Model.DateIn" class="text-danger"></span>
                                    </div>
                                <div class="col-12" style="color: White">
                                        <label>Message</label>
                                        <textarea asp-for="Message" class="form-control" rows="5"></textarea>
                                        <span asp-validation-for="@Model.Message" class="text-danger"></span>
                                    </div>
                                    <div class="col-12">
                                        <div style="height: 15px;"></div>

                                <button style="width: 85px; background-color: white; border-radius: 15px; color: black; height: 40px; border-style: none;" type="submit">Submit</button>

                                    </div>
                                </div>
                            </div>
                    
                        </div>
                </div>

            </div>
     </div>
</form>
   <div style="height: 65px;"></div>

